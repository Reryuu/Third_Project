    <div class="col-div-4">
        <div class="content-box">
            <p class="head">Contact</p>
            <p class="p3"><i class="fa fa-phone" aria-hidden="true"></i> &nbsp;&nbsp;@Html.DisplayFor(model => model.phone)</p>
            <p class="p3"><i class="fa fa-envelope" aria-hidden="true"></i> &nbsp;&nbsp;@Html.DisplayFor(model => model.email)</p>
            <p class="p3"><i class="fa fa-home" aria-hidden="true"></i> &nbsp;&nbsp;Viet Nam</p>


            <br />
