                <p class="p3">CSS Winner Awards</p>
                <p class="p3">The Shorty Awards</p>
                <p class="p3">Awwwards</p>*@

            <br />
            <p class="head">Languages</p>
            <p class="p3">VietNamese</p>
            <p class="p3">English</p>
        </div>
    </div>
    <div class="line"></div>
    <div class="col-div-8">
        <div class="content-box">
            <p class="head">target</p>
            <p class="p3">
                @Html.DisplayFor(model => model.target)
            </p>
            <br />
            <p class="head">EXPERIENCE</p>
            <p class="p-4">
                @Html.DisplayFor(model => model.experience)
            </p>
            <br />

            <p class="head">Education</p>
            @Html.DisplayFor(model => model.education)
        </div>
    </div>

