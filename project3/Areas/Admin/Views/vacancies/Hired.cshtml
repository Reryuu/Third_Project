@model IEnumerable<project3.Models.applicant>

@{
    ViewBag.Title = "Hired";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@section header {
    Applicant Hired
}

<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                Danh sách ứng viên đã được chọn
            </div>

            <!-- /.panel-heading -->
            <div class="panel-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().id)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().display_name)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().email)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().phone)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.First().createAt)
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr id="row_@item.id">
                                    <td>
                                        @Html.DisplayFor(modelItem => item.id)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.display_name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.phone)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.createAt)
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
    </div>
    <p class="btn btn-default">
        @Html.ActionLink("Back to List", "Index")
    </p>
</div>
