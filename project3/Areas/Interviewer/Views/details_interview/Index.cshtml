@model PagedList.IPagedList<project3.Models.details_interview>
@using PagedList.Mvc

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Interviewer/Views/Shared/_Layout.cshtml";
}

@section header {
    Interview Schedule
}

@using (Html.BeginForm("Index", "details_interview", FormMethod.Get))
{
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Danh sách lịch phỏng vấn
                </div>

                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="row form-group">
                        <div class="col-lg-12">
                            <div class="col-md-4">
                                <input type="text" value="@ViewBag.search" class="form-control" name="search" />
                            </div>
                            <div class="col-md-4">
                                <input type="submit" class="btn btn-success" value="Tìm kiếm" />
                                @*<a class="btn btn-primary" href="/Admin/details_interview/Create">Thêm mới</a>*@
                            </div>
                        </div>
                    </div>


                    <div class="table-responsive">
                        <table class="table table-striped table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@Html.DisplayNameFor(model => model.First().id)</th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.First().applicant.user.name)*@
                                        Applicant name
                                    </th>
                                    <th>
                                        @*@Html.DisplayNameFor(model => model.First().vacancy.title)*@
                                        Vacancy
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().time)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.First().status)
                                    </th>
                                    <th>Sửa</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr id="row_@item.id">
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            <a href="/Interviewer/details_interview/Hired/@item.applicantId">
                                                @Html.DisplayFor(modelItem => item.applicant.display_name)
                                            </a>
                                        </td>
                                        <td>
                                            <a href="/Interviewer/details_interview/Vacancy/@item.vacancyId">
                                                @Html.DisplayFor(modelItem => item.vacancy.title)
                                            </a>
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.time)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.status)
                                        </td>
                                        <td>
                                            <a class="btn btn-mini btn-info icon-edit bigger-10" href="/Interviewer/details_interview/Edit/@item.id"><i class="far fa-edit"></i></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.table-responsive -->
                </div>
                <!-- /.panel-body -->
            </div>
        </div>
        Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
        @Html.PagedListPager(Model, i => Url.Action("Index", "details_interview", new { i }))
    </div>
}